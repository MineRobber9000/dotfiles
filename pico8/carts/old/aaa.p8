pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
str = 32
mstr = 32
health = 3
t = 0

function _update()
	t=(t+1)%30
	if t==0 and str>0 then str-=1 end
end

function _draw()
	cls(5)
	if str>0 then line(0,127,str*flr(128/mstr),127,8) end
	x=1
	for i=1,health do spr(0,x,118) x+=9 end
end
